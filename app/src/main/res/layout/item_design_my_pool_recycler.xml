<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:background="@drawable/boundary_background_3">

        <Button
            android:id="@+id/my_ride_accept_id"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="3dp"
            android:layout_marginLeft="300dp"
            android:background="@drawable/custom_button_design"
            android:clickable="true"
            android:text="accept"
            android:textColor="#ffffff">

        </Button>

        <Button
            android:id="@+id/my_ride_reject_id"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="3dp"
            android:layout_marginLeft="210dp"
            android:background="@drawable/custom_button_design"
            android:clickable="true"
            android:text="reject"

            android:textColor="#ffffff">

        </Button>

        <TextView
            android:id="@+id/my_ride_name_id"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="194dp"
            android:layout_marginBottom="17dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="25sp">

        </TextView>

    </RelativeLayout>


</RelativeLayout>